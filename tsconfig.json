{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016",
  },
  "include": [
    ".eslintrc.js",
    "./api/*.ts",
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}